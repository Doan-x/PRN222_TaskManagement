@model PRN222_TaskManagement.Models.Event

@{
    ViewData["Title"] = "Save";
    var categories = ViewData["Categories"] as List<Category>;
}

<h1 class="mb-4 text-center text-primary">Event</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h4 class="mb-3 text-center">Event Details</h4>

                    <form asp-action="Save">
                        @if(Model !=null){
                            <input type="hidden" asp-for="EventId" />
                        }

                        @if (@ViewBag.ReturnUrl != null)
                        {
                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                       }

                        <div class="row">
                            <!-- Cột Trái -->
                            <div class="col-md-6">
                                <!-- Title -->
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                                        <input asp-for="Title" class="form-control" placeholder="Enter event title..." />
                                    </div>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <!-- Category -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Category</label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option selected disabled>Select category</option>
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <!-- Location -->
                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label fw-bold">Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                        <input asp-for="Location" class="form-control" placeholder="Enter event location..." />
                                    </div>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                                <!-- Description -->
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter description..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cột Phải -->
                            <div class="col-md-6">
                                <!-- Start Time -->
                                <div class="mb-3">
                                    <label asp-for="StartTime" class="form-label fw-bold">Start Time</label>
                                    <input asp-for="StartTime" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>

                                <!-- End Time -->
                                <div class="mb-3">
                                    <label asp-for="EndTime" class="form-label fw-bold">End Time</label>
                                    <input asp-for="EndTime" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>

                                <!-- Priority -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Priority</label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high">High</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>


                                <!-- Color -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Theme Color</label>
                                    <select asp-for="Color" class="form-select">
                                        <option value="red">Red</option>
                                        <option value="blue">Blue</option>
                                        <option value="black">Black</option>
                                        <option value="green">Green</option>
                                    </select>
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-plus-lg"></i> Save Event
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="position-fixed" style="top: 10%; right: 1rem; z-index: 1050; width: 350px;">
        <div id="errorToast" class="toast show align-items-center text-bg-danger border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-bold fs-5" id="toast-content">
                    ✅ @TempData["Error"]
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}


    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById("errorToast");
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }
        });
   </script>





